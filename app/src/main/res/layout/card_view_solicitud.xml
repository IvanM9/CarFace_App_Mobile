<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_articulos"
    android:layout_margin="12dp"
    app:cardBackgroundColor="#61F4F6F0"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:contentPadding="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id"
            android:textColor="@color/black"
            android:id="@+id/geek_item_articulo_id"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_alignParentStart="true"
            android:visibility="invisible"
            />


        <TextView
            android:id="@+id/geek_item_articulo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/geek_item_articulo_id"
            android:layout_marginStart="10dp"
            android:text="Nombres"
            android:textColor="#333232"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/geek_item_articulo_date_published"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/geek_item_articulo_doi"
            android:layout_marginStart="10dp"
            android:text="Licencia"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Link: "
            android:textColor="@color/black"
            android:id="@+id/geek_item_articulo_link"
            android:textStyle="bold"
            android:layout_below="@id/geek_item_articulo_date_published"
            android:textSize="15sp"
            android:visibility="invisible"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="doi"
            android:textColor="@color/black"
            android:id="@+id/geek_item_articulo_doi"
            android:textStyle="bold"
            android:layout_below="@id/geek_item_articulo_title"
            android:textSize="15sp"
            android:visibility="invisible"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>